root = true

[*]
end_of_line = lf
insert_final_newline = false
charset = utf-8
trim_trailing_whitespace = true
indent_size = 4
tab_width = 4

[Makefile]
indent_style = tab

[*.lua,*.toml]
indent_style = space
max_line_length = 100

[*.md,*.yml,*.yaml]
tab_width = 2
indent_size = 2
indent_style = space
max_line_length = 120
